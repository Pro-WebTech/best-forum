{
  "name": "refire-forum",
  "version": "1.5.0",
  "description": "Simple discussion forum implemented with refire-app",
  "main": "index.js",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "start": "node devServer.js",
    "build:rules": "firebase-bolt security-rules.bolt",
    "build:webpack": "webpack --config webpack.config.prod.js",
    "build": "npm run clean && npm run build:webpack && npm run build:rules && npm run html",
    "html": "cp index.html dist/index.html",
    "login": "firebase login",
    "bootstrap": "firebase database:set / bootstrap.json",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only database",
    "deploy": "npm run deploy:rules && npm run deploy:hosting",
    "lint": "eslint src"
  },
  "author": "Lari Hoppula",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.5",
    "elemental": "^0.6.1",
    "emojilib": "^2.0.2",
    "highlight.js": "^9.8.0",
    "lodash": "^4.16.6",
    "moment": "^2.15.2",
    "native-promise-only": "^0.8.1",
    "prefix-lite": "0.0.2",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-addons-css-transition-group": "^15.6.0",
    "react-dom": "^15.6.1",
    "react-markdown": "^2.4.2",
    "react-pure-render": "^1.0.2",
    "refire-app": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-2": "^6.18.0",
    "color": "^0.11.4",
    "css-loader": "^0.25.0",
    "eslint": "^3.9.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^2.1.0",
    "eslint-plugin-react": "^6.5.0",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "firebase-bolt": "^0.8.1",
    "firebase-tools": "^6.4.0",
    "json-loader": "^0.5.4",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "react-icons": "^2.2.1",
    "react-tap-event-plugin": "^2.0.1",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.3",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.1"
  }
}
